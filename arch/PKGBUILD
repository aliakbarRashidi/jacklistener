# Maintainer: Maxim A. Mikityanskiy <maxtram95@gmail.com>
pkgname=jacklistener-git
pkgver=20120309
pkgrel=1
pkgdesc="Headphones Jack Listener Daemon"
arch=('i686' 'x86_64')
url="https://github.com/gentoo-root/jacklistener"
license=('GPL3')
provides=('jacklistener')
depends=('dbus')
makedepends=('git' 'pkgconfig' 'linux-headers')

_gitroot="git://github.com/gentoo-root/jacklistener.git"
_gitname="jacklistener"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  make
}

package() {
   cd "$srcdir/$_gitname-build"
   make DESTDIR="$pkgdir" install
}
